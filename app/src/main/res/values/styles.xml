<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_marginTop">@dimen/space_16</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/space_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/space_32</item>
    </style>

    <style name="info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/space_8</item>
        <item name="android:layout_marginRight">@dimen/space_8</item>
    </style>

    <style name="info.num" parent="info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="info.txt" parent="info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="v_line">
        <item name="android:layout_width">@dimen/line_1</item>
        <item name="android:layout_height">@dimen/size_72</item>
    </style>

    <style name="data_cont">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/space_72</item>
        <item name="android:layout_marginLeft">@dimen/space_32</item>
        <item name="android:layout_marginRight">@dimen/space_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>
