<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_112"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            style="@style/info"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/info.num"
                android:text="5"/>

            <TextView
                style="@style/info.txt"
                android:text="Рейтинг"/>
        </LinearLayout>

        <View
            style="@style/v_line"
            android:background="@color/grey_light"/>

        <LinearLayout
            style="@style/info"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                style="@style/info.num"
                android:text="5"/>

            <TextView
                style="@style/info.txt"
                android:text="Написано строк кода"/>
        </LinearLayout>

        <View
            style="@style/v_line"
            android:background="@color/grey_light"/>

        <LinearLayout
            style="@style/info"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/info.num"
                android:text="5"/>

            <TextView
                style="@style/info.txt"
                android:text="Проектов"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_phone_black_24dp"/>

        <LinearLayout
            style="@style/data_cont"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/data"
                    android:hint="Мобильный"
                    android:text="+7 (917) 971-11-11"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_1"
        android:layout_marginLeft="@dimen/space_72"
        android:background="@color/grey_light"/>

</LinearLayout>
