<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_conteiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            style="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_primary">

            <android.support.v7.widget.Toolbar
                android:layout_marginTop="@dimen/space_24"
                android:id="@+id/toolbar"
                style="@style/AppTheme.PopupOverlay"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/white"/>

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            style="@style/mpwc"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                style="@style/mpwc"
                android:layout_marginTop="@dimen/space_72">

                <LinearLayout
                    style="@style/mpwc"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_112"
                        android:background="@color/grey"
                        android:orientation="horizontal">

                        <LinearLayout
                            style="@style/info"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/info.num"
                                android:text="5"/>

                            <TextView
                                style="@style/info.txt"
                                android:text="Рейтинг"/>
                        </LinearLayout>

                        <View
                            style="@style/v_line"
                            android:background="@color/grey_light"/>

                        <LinearLayout
                            style="@style/info"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                style="@style/info.num"
                                android:text="5"/>

                            <TextView
                                style="@style/info.txt"
                                android:text="Написано строк кода"/>
                        </LinearLayout>

                        <View
                            style="@style/v_line"
                            android:background="@color/grey_light"/>

                        <LinearLayout
                            style="@style/info"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/info.num"
                                android:text="5"/>

                            <TextView
                                style="@style/info.txt"
                                android:text="Проектов"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/mpwc"
                        android:layout_marginTop="@dimen/space_16"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_phone_black_24dp"/>

                        <LinearLayout
                            style="@style/data_cont"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                style="@style/mpwc">

                                <EditText
                                    style="@style/data"
                                    android:hint="@string/hint1"
                                    android:text="@string/mobile"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/call_img"
                            style="@style/icon.right"
                            android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_1"
                        android:layout_marginLeft="@dimen/space_72"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        style="@style/mpwc"
                        android:layout_marginTop="@dimen/space_16"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_email_black_24dp"/>

                        <LinearLayout
                            style="@style/data_cont"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                style="@style/mpwc">

                                <EditText
                                    style="@style/data"
                                    android:hint="@string/hint2"
                                    android:text="@string/email"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_send_black_24dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_1"
                        android:layout_marginLeft="@dimen/space_72"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        style="@style/mpwc"
                        android:layout_marginTop="@dimen/space_16"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/vk"/>

                        <LinearLayout
                            style="@style/data_cont"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                style="@style/mpwc">

                                <EditText
                                    style="@style/data"
                                    android:hint="@string/hint3"
                                    android:text="@string/vk"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_visibility_black_24dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_1"
                        android:layout_marginLeft="@dimen/space_72"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        style="@style/mpwc"
                        android:layout_marginTop="@dimen/space_16"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/git"/>

                        <LinearLayout
                            style="@style/data_cont"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                style="@style/mpwc">

                                <EditText
                                    style="@style/data"
                                    android:hint="@string/hint4"
                                    android:text="@string/github"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            style="@style/icon.right"
                            android:src="@drawable/ic_visibility_black_24dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_1"
                        android:layout_marginLeft="@dimen/space_72"
                        android:background="@color/grey_light"/>

                    <LinearLayout
                        style="@style/mpwc"
                        android:layout_marginTop="@dimen/space_16"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/icon.left"
                            android:src="@drawable/ic_account_circle_black_24dp"/>

                        <LinearLayout
                            style="@style/data_cont"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                style="@style/mpwc">

                                <EditText
                                    style="@style/data"
                                    android:hint="@string/hint5"
                                    android:inputType="textMultiLine"
                                    android:text="@string/bio"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>